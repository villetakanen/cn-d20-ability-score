{
  "name": "@iithd/cn-d20-ability-score",
  "private": false,
  "version": "0.0.1",
  "description": "A CN Design System Lit element for displaying a D20 style ability score and modifier.",
  "type": "module",
  "main": "dist/cn-d20-ability-score.umd.cjs",
  "module": "dist/cn-d20-ability-score.js",
